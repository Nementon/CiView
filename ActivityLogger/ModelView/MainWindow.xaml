<Window x:Class="ModelView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:model="clr-namespace:ActivityLogger.SewerModel"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ActivityLogger" Height="600" Width="1000">
    <Window.Resources>
        <DataTemplate x:Key="LogItemTemplate" DataType="model:LineItem">
           
           
            <TextBlock Text="{Binding Path=.}">
                <TextBlock.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding Path=DisplayInfoCommand}"></MouseBinding>
                </TextBlock.InputBindings>
            </TextBlock>

        </DataTemplate>
    </Window.Resources>
    <Grid Height="570" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="799*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBox1" ItemTemplate="{StaticResource LogItemTemplate}" Height="400" Margin="10,0,9,120" VerticalAlignment="Bottom" ItemsSource="{Binding Obs}" SelectedItem="{Binding SelectedLog}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Visibility" Value="Collapsed">
                        
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <ToolBar x:Name="TB1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="56" Height="28" Margin="10,10,0,0" Header="View">
            <Separator Height="23" Margin="0" VerticalAlignment="Top" Width="10"/>
            <Menu x:Name="ViewMenu" Height="122" VerticalAlignment="Top" Width="127">
                <Button Content="CollapseAllLogs"/>
                <Button Content="UnCollapseAllLogs"/>
                <Button x:Name="ReDisplayButton" Content="info" Width="75" Command="{Binding Path=DisplayInfoCommand}"/>
            </Menu>
        </ToolBar>
        <Expander x:Name="PurningFiltersExpander" Grid.Column="1" Header="Purning Filters" Margin="10,50,11,422" Cursor="ScrollS">
            <Grid Background="#FFE5E5E5"/>
        </Expander>
        <Expander x:Name="DisplayFiltersExpander" Grid.Column="1" Header="Display Filters" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top" Width="172" Height="134">
            <Expander x:Name="LogLevelFilterExpander" Header="LogLevelFilter" HorizontalAlignment="Left" Width="160" Margin="10,0,0,0">
                <WrapPanel x:Name="LogLevelPanel" HorizontalAlignment="Left" Height="82" Width="74" Margin="27,0,0,0">
                    <CheckBox Content="Info" IsChecked="{Binding Path=LogLevelInfoIsChecked, Mode=TwoWay}"/>
                    <CheckBox Content="Trace" IsChecked="{Binding Path=LogLevelTaceIsChecked, Mode=TwoWay}"/>
                    <CheckBox Content="Warn" IsChecked="{Binding Path=LogLevelWarnIsChecked, Mode=TwoWay}"/>
                    <CheckBox Content="Error" IsChecked="{Binding Path=LogLevelErrorIsChecked, Mode=TwoWay}"/>
                    <CheckBox Content="Fatal" IsChecked="{Binding Path=LogLevelFatalIsChecked, Mode=TwoWay}"/>
                </WrapPanel>
            </Expander>
        </Expander>
        <ListBox x:Name="InfoBox" HorizontalAlignment="Left" Height="105" Margin="10,455,0,0" VerticalAlignment="Top" ItemsSource="{Binding LogsListInfoBox}" Width="779"/>
    </Grid>
</Window>
